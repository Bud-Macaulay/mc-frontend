---
import Layout from "@layouts/Layout.astro";
import TabBlock from "@components/home/TabBlock.astro";

const buttonContainerStyle = "flex items-center space-x-4";

const buttonStyle = `
  min-w-24
  px-1 py-1
  text-center font-semibold text-slate-700
  bg-sky-50 hover:bg-sky-100
  border border-slate-600 rounded
  transition duration-300
`;
---

<Layout>
  {/* stack as cols on small screens */}
  <div class="flex flex-wrap gap-0 px-4">
    <div
      class="w-full lg:w-10/24 flex justify-center lg:justify-start items-center"
    >
      <div class="logo">
        <object
          id="mc_logo"
          data="images/mcloud-home-dark-links.svg"
          type="image/svg+xml"></object>
      </div>
      <!-- <p class="home-tagline">
        Built for seamless sharing of resources in computational materials science.
      </p> -->
    </div>
    <div class="w-full lg:w-14/24 pt-4">
      <div class="space-y-2">
        <div class={buttonContainerStyle}>
          <a class={buttonStyle} href="learn">LEARN</a>
          <span>Lectures and tutorials in computational materials science</span>
        </div>

        <div class={buttonContainerStyle}>
          <a class={buttonStyle} href="work">WORK</a>
          <span
            >Simulation tools and services - in the cloud or on your computer</span
          >
        </div>

        <div class={buttonContainerStyle}>
          <a class={buttonStyle} href="discover">DISCOVER</a>
          <span>Curated research data with tailored visualizations</span>
        </div>

        <div class={buttonContainerStyle}>
          <a class={buttonStyle} href="explore">EXPLORE</a>
          <span>Interactive browser for AiiDA provenance graphs</span>
        </div>

        <div class={buttonContainerStyle}>
          <a
            class={buttonStyle}
            href="https://archive.materialscloud.org/"
            target="_blank"
            rel="noopener noreferrer">ARCHIVE</a
          >
          <span
            >An open-access, moderated repository for research data in
            computational materials science</span
          >
        </div>
      </div>
      <p class="text-xs font pt-4">
        Please cite
        <a href="https://doi.org/10.1038/s41597-020-00637-5" target="_blank"
          >L. Talirz et al., Sci Data 7, 299 (2020)</a
        >, if you use Materials Cloud in your research.
      </p>
    </div>
  </div>

  <TabBlock />
</Layout>
