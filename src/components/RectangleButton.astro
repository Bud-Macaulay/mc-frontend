---
/**
 * Single square button with image, title, and optional subtitle.
 *
 * Props:
 *  - href: link target (external links open in new tab)
 *  - img: image path
 *  - title: text below the image
 *  - subtitle: optional smaller text
 *  - width: Tailwind width class (e.g. "w-32")
 *  - height: Tailwind height class (e.g. "h-32")
 */

const {
  href,
  img,
  title,
  subtitle = null,
  width = "w-64",
  height = "h-40",
} = Astro.props;

const buttonStyle = `
  block flex flex-col items-center justify-center text-center no-underline
`;
---

<div class=`entry-container ${width} ${height}`>
  <a
    href={href}
    target={href.startsWith("http") ? "_blank" : undefined}
    class={buttonStyle}
  >
    <img class=`entry-image h-14` src={img} alt={title} />
    <h3 class="entry-title">{title}</h3>
    {subtitle && <p class="entry-description">{subtitle}</p>}
  </a>
</div>
